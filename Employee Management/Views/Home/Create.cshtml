@model Employee

@{
    ViewBag.Title = "Create Employee";
}

<form asp-controller="home" asp-action="create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="name" class="form-control" placeholder="Name">
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="email" class="form-control" placeholder="Email">
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="department" class="col-sm-2 col-form-label">Department</label>
        <div class="col-sm-10">
            <select asp-for="department" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="department" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
